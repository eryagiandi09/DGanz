package tugaspbosesi4;

import java.util.Scanner;

/**
 *
 * @author HP EliteBook 725 G2
 */
public class TugasPBOSesi4 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        //untuk mengimput data dari user
        Scanner input=new Scanner(System.in);
       
        // mendeklarasika variabel
        int price ; // harga
        int amount; //jumlah
        int pajak; // Pajak
        int total ; //jumlah*harga
       
        // Selanjutnya kita membuat program untuk Pajak Pertambahan Nilai (PPN) yaitu Sebesar 10% dari total pembelian.
       
        System.out.print("Masukan Harga barang disini : ");
        price=input.nextInt();
        System.out.print("Masukan Jumlah barang disini : ");
        amount=input.nextInt();
        total=amount*price;
       
        // Selanjutnya kita buat program diskonnya menggunakan IF else
        if(total>=0){
            pajak=total*10/100;
            total=total+pajak;
            System.out.println ("jadi totalnya : "+total);
    }    
}
        // TODO code application logic here
    }
    
