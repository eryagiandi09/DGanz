class Mahasiswa:
 def __init__(self, nm, no_induk):
  self.nama = str(nm);
  self.nim = str(no_induk);

 def getNama(self):
  return self.nama;

 def getNim(self):
  return self.nim;

 def setNama(self, nm):
  self.nama = nm;

 def setNim(self, no_induk):
  self.nim = no_induk;

DftrMhs = {};
loop = True;

print("===================================");
print("=         Daftar Mahasiswa        =");
print("===================================");
print("= # MENU                          =");
print("= 1. Tambah Mahasiswa             =");
