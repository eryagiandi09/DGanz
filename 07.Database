   print("Data tidak ditemukan!!!");
 elif menu == 3:
  for i in DftrMhs:
   print("Nama :", DftrMhs[i].getNama());
   print("Nim :", DftrMhs[i].getNim());
 elif menu == 4:
  nim = str(input("Masukan nim : "));
