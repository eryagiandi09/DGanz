print("===================================");

while(loop):
 print("\n\n");
 menu = int(input("Masukan menu : "));

 if menu == 1:
  nama = str(input("Masukan nama : "));
  nim = str(input("Masukan nim : "));
  mhs = Mahasiswa(nama, nim);
